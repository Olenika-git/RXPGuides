<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Button name="RXP_IU_AH_ShoppingList_ItemRow" hidden="false" virtual="true" enableMouse="true">
        <Size x="200" y="17"/>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString parentKey="Name" inherits="GameFontNormal" justifyH="LEFT" text="$parentName">
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="20" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <Texture file="Interface\AuctionFrame\UI-AuctionItemNameFrame">
                    <Size x="10" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeKey="$parent.left" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="-22" y="0"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="RIGHT" relativeKey="$parent.right" relativePoint="LEFT">
                            <Offset>
                                <AbsDimension x="16" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0.078125" right="0.75" top="0" bottom="1.0"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="Status" inherits="GameFontHighlightSmall" text="(11/60)">
                    <Anchors>
                        <Anchor point="RIGHT" relativeKey="$parent" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="-30" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="ItemFrame">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="LEFT"/>
                </Anchors>
                <Layers>
                    <Layer level="BORDER">
                        <Texture parentKey="IconTexture"/>
                    </Layer>
                    <Layer level="OVERLAY">
                        <Texture parentKey="IconBorder" file="Interface\Common\WhiteIconFrame" hidden="true">
                            <Size x="16" y="16"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY" textureSubLevel="1">
                        <Texture parentKey="IconOverlay" hidden="true">
                            <Size x="16" y="16"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnEnter>
                        local p = self:GetParent()
                        if p.itemLink then
                            GameTooltip:SetOwner(self);
                            GameTooltip:SetHyperlink(p.itemLink);
                            GameTooltip:Show();
                        end
                        RXP.auctionHouse.shoppingList.RowOnEnter(p)
                    </OnEnter>
                    <OnLeave>
                        RXP.auctionHouse.shoppingList.RowOnLeave(self:GetParent())
						GameTooltip_Hide();
						ResetCursor();
                    </OnLeave>
                    <OnClick>
                        RXP.auctionHouse.shoppingList.RowOnClick(self:GetParent())
                    </OnClick>
                </Scripts>
                <NormalTexture parentKey="NormalTexture" file="Interface\Buttons\UI-Quickslot2">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </NormalTexture>
                <HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
            </Button>
        </Frames>
        <Scripts>
            <OnEnter>
                RXP.auctionHouse.shoppingList.RowOnEnter(self)
            </OnEnter>
            <OnLeave>
                RXP.auctionHouse.shoppingList.RowOnLeave(self)
            </OnLeave>
            <OnClick>
                RXP.auctionHouse.shoppingList.RowOnClick(self)
            </OnClick>
        </Scripts>
        <HighlightTexture parentKey="Highlight" file="Interface\HelpFrame\HelpFrameButton-Highlight" alphaMode="ADD">
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="0" y="-1"/>
                    </Offset>
                </Anchor>
                <Anchor point="BOTTOMRIGHT">
                    <Offset>
                        <AbsDimension x="-24" y="1"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <TexCoords left="0" right="1.0" top="0" bottom="0.578125"/>
        </HighlightTexture>
    </Button>
    <Frame name="RXP_IU_AH_ShoppingList_Frame" hidden="true">
        <Size x="230" y="447"/>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="RXP_IU_AH_ShoppingList_Title" inherits="GameFontNormal" text="RXP_IU_AH_ShoppingList_Title">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="8"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <Texture name="$parentFill" file="Interface\AuctionFrame\UI-AuctionPost-Background">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <TexCoords left="0" right="1" top="0.25" bottom="0.75" />
                    <Color r="0.55" g="0.55" b="0.55" />
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="AuctionFrameCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="7" y="6"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Frame name="RXP_IU_AH_ShoppingList_ScrollFrame" inherits="WowScrollBoxList" parentKey="ScrollBox">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="4" y="-8"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="0" y="4"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Frames>
                    <EventFrame name="RXP_IU_AH_ShoppingList_ScrollBar" inherits="WowTrimScrollBar" parentKey="ScrollBar">
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT"/>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT"/>
                        </Anchors>
                        <Layers>
                            <Layer level="BACKGROUND">
                                <Texture name="$parentFill" file="Interface\AuctionFrame\UI-AuctionPost-Background">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
                                            <Offset>
                                                <AbsDimension x="0" y="0"/>
                                            </Offset>
                                        </Anchor>
                                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
                                            <Offset>
                                                <AbsDimension x="0" y="0"/>
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                    <TexCoords left="0" right="1" top="0.25" bottom="0.75" />
                                    <!-- RXP Blue bottomFrameBG -->
                                    <Color r="0.070588" g="0.070588" b="0.15686" a="0.4" />
                                </Texture>
                            </Layer>
                        </Layers>
                    </EventFrame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>
